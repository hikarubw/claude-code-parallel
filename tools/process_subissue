#!/bin/bash
# Process subissue - This is called by Pueue tasks
# It's a placeholder that marks the task for hybrid-worker to pick up

SUBISSUE_ID="$1"
PARENT_ISSUE="$2"

# This script is just a placeholder
# The actual work is done by hybrid-worker which polls Pueue
# and runs Claude in a visible tmux pane

echo "Subissue #$SUBISSUE_ID (parent: #$PARENT_ISSUE) queued for processing"
echo "A hybrid-worker will pick this up and run Claude"

# Keep the task "running" so hybrid-worker can find it
# The worker will mark it as complete/failed
sleep 86400  # Sleep for 24 hours (will be killed by worker)
