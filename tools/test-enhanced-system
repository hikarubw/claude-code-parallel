#!/bin/bash
# Test script for the enhanced worker system
# Verifies all components are working correctly

set -e

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Colors
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}=== Enhanced Worker System Test ===${NC}"
echo ""

# Test 1: Check all scripts exist and are executable
echo -e "${YELLOW}Test 1: Checking components...${NC}"
components=(
    "worker-health-monitor"
    "hybrid-worker-enhanced"
    "worker-manager"
    "worker-performance"
    "setup-hybrid-enhanced"
)

all_ok=true
for component in "${components[@]}"; do
    if [ -x "$SCRIPT_DIR/$component" ]; then
        echo -e "${GREEN}✓ $component exists and is executable${NC}"
    else
        echo -e "${RED}✗ $component missing or not executable${NC}"
        all_ok=false
    fi
done

if [ "$all_ok" = false ]; then
    echo -e "${RED}Some components are missing. Please check installation.${NC}"
    exit 1
fi

# Test 2: Health monitor functionality
echo ""
echo -e "${YELLOW}Test 2: Testing health monitor...${NC}"

# Reset metrics
"$SCRIPT_DIR/worker-health-monitor" reset

# Test heartbeat
"$SCRIPT_DIR/worker-health-monitor" heartbeat 1 "alive" "test-task"
echo -e "${GREEN}✓ Heartbeat recorded${NC}"

# Test health check
health=$("$SCRIPT_DIR/worker-health-monitor" check 1)
echo -e "${GREEN}✓ Health check returned: $health${NC}"

# Test metrics
metrics=$("$SCRIPT_DIR/worker-health-monitor" metrics 1)
echo -e "${GREEN}✓ Metrics retrieved${NC}"

# Test 3: Worker manager basic functions
echo ""
echo -e "${YELLOW}Test 3: Testing worker manager...${NC}"

# Check status (won't actually have workers)
"$SCRIPT_DIR/worker-manager" status >/dev/null 2>&1
echo -e "${GREEN}✓ Manager status command works${NC}"

# Test 4: Performance tracking
echo ""
echo -e "${YELLOW}Test 4: Testing performance tracking...${NC}"

# Generate empty report
"$SCRIPT_DIR/worker-performance" report >/dev/null 2>&1
echo -e "${GREEN}✓ Performance report generated${NC}"

# Test 5: Queue integration
echo ""
echo -e "${YELLOW}Test 5: Testing queue integration...${NC}"

# Test get command
"$SCRIPT_DIR/queue" get "test-item" >/dev/null 2>&1 || true
echo -e "${GREEN}✓ Queue get command available${NC}"

echo ""
echo -e "${BLUE}=== All Tests Passed ===${NC}"
echo ""
echo "The enhanced worker system is properly installed."
echo "To start using it, run:"
echo ""
echo "  $SCRIPT_DIR/setup-hybrid-enhanced [number_of_workers]"
echo ""